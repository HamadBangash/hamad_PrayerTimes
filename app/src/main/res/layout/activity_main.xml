<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"
    tools:context="com.dgaps.android.prayertimes.MainActivity">

    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#000"
        android:alpha="0.72"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rows"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/row1">

                <TextView
                    android:text="Fajr"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L1"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Fajr"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row2"
                android:layout_below="@+id/row1">

                <TextView
                    android:text="Sunrise"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L2"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Sunrise"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row3"
                android:layout_below="@+id/row2">

                <TextView
                    android:text="Dhuhr"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L3"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Dhuhr"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row4"
                android:layout_below="@+id/row3">

                <TextView
                    android:text="Asr"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L4"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Asr"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row5"
                android:layout_below="@+id/row4">

                <TextView
                    android:text="Sunset"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L5"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Sunset"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row6"
                android:layout_below="@+id/row5">

                <TextView
                    android:text="Maghrib"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L6"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Maghrib"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row7"
                android:layout_below="@+id/row6">

                <TextView
                    android:text="Isha"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L7"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Isha"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row8"
                android:layout_below="@+id/row7">

                <TextView
                    android:text="Imsak"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L8"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Imsak"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/row9"
                android:layout_below="@+id/row8">

                <TextView
                    android:text="Midnight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/L9"
                    android:layout_weight="1"
                    android:textColor="#fff" />

                <TextView
                    android:gravity="right"
                    android:text="hellow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:id="@+id/Midnight"
                    android:layout_weight="1"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:text="Search Prayer Times"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_style_2"
            android:textColor="#fff"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/button"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true" />

        <EditText
            android:background="@drawable/edit_text_style"
            android:typeface="serif"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="City Name"
            android:ems="10"
            android:layout_marginTop="6dp"
            android:id="@+id/ETcity"
            android:layout_below="@+id/ETcountry"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:background="@drawable/edit_text_style"
            android:typeface="serif"
            android:textColorHint="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Country Name"
            android:capitalize="words"
            android:ems="10"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:id="@+id/ETcountry"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner"
            android:layout_below="@+id/ETcity" />

    </RelativeLayout>
</RelativeLayout>